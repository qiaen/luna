{
	"compilerOptions": {
		"baseUrl": "./",
		"target": "esnext",
		"module": "esnext",
		"moduleResolution": "node",
		"strict": true,
		"jsx": "preserve",
		"sourceMap": true,
		"lib": ["esnext", "dom"],
		"types": ["vite/client", "element-plus/global"],
		"plugins": [{ "name": "@vuedx/typescript-plugin-vue" }],
		"paths": {
			"@/*": ["./src/*"]
		}
	},
    "suppressImplicitAnyIndexErrors": true,
	"include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue", "auto-imports.d.ts", "./src/types/"]
}
